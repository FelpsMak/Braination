<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpapernormal">

    <ImageView
        android:id="@+id/iconvoltaresq"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="386dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconvoltar2"
        android:onClick="backprincipal"/>

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="88dp"
        android:layout_marginBottom="105dp"
        android:background="@drawable/borda4"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Como vai se cadastrar?"
            android:textColor="#0C0B0B"
            android:textSize="29sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="283dp"
        android:layout_height="166dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="320dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_aluno_cad"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="@drawable/btnaluno"
            android:text="Aluno"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:onClick="alunos"/>

        <Button
            android:id="@+id/btn_prof_cad"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnprof"
            android:text="Professor"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:onClick="professor"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>