<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpapernormal">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:outlineAmbientShadowColor="#fff"
        android:elevation="10dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/borda4"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Como vai se cadastrar?"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#0C0B0B"
            android:textSize="29sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_aluno_cad"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/btnaluno"
        android:fontFamily="@font/roboto_regular"
        android:onClick="alunos"
        android:text="Aluno"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btn_prof_cad"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btnprof"
        android:onClick="professor"
        android:text="Professor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_aluno_cad" />


</androidx.constraintlayout.widget.ConstraintLayout>