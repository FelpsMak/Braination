<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/WallpaperClaro">

    <ImageView
        android:id="@+id/image_login_voltar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_arrow_forward_black_24dp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/livro"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="43dp"
        android:text="Email"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/email_text_login"
        android:layout_width="300dp"
        android:layout_marginTop="5dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/borda"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#1F1F1F"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="146dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginStart="43dp"
        android:layout_marginTop="5dp"

        android:textColor="#000"/>

    <EditText
        android:id="@+id/pass_text_login"
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/borda"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#1F1F1F"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="146dp" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_height="52dp"
        android:text="Login"
        android:textColor="#D5D2D2"
        android:background="@drawable/borda3"/>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Forgot your password?"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        />


</LinearLayout>